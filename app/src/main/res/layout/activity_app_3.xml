<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".App_3"
    android:background="#fff4d7">

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="55dp"
        android:text="CHEF'S CHOICE"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#99720c"/>

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/mlogo"
        android:contentDescription="A tiny Android icon"/>


    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv2"
        android:text="SIGN UP DETAILS"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="#735f2a"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv3"
        android:text="USER NAME : "
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/et1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint= "Enter Valid Username"
        android:layout_below="@+id/tv3"
        android:layout_marginLeft="150dp"/>

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv4"
        android:text="EMAIL : "
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/et2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint= "Enter Valid E-mail"
        android:layout_below="@+id/tv4"
        android:layout_marginLeft="150dp"/>

    <Button
        android:id="@+id/b3"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="Verify"
        android:layout_below="@+id/et1"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#f5e9cb"
        android:background="#e0c784"/>


    <TextView
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv5"
        android:text="PHONE NO : "
        android:inputType="numberSigned"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/et3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint= "Enter Valid Number"
        android:layout_below="@+id/tv5"
        android:layout_marginLeft="150dp"
        android:inputType = "numberSigned" />

    <TextView
        android:id="@+id/tv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv6"
        android:text="GENDER :"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"/>

    <RadioButton
        android:id="@+id/c1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv6"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="12dp"
        android:text="MALE"/>

    <RadioButton
        android:id="@+id/c2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv6"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="12dp"
        android:text="FEMALE"/>

    <TextView
        android:id="@+id/tv8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv7"
        android:text="LOCATION :"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"/>

    <AutoCompleteTextView
        android:id="@+id/ac1"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c1"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="2dp"
        android:hint="Enter Shop Location"/>



    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:layout_below="@+id/tv7"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="100dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#f5e9cb"
        android:background="#e0c784"/>





</RelativeLayout>