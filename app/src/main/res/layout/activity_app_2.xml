<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".APP_2"
    android:background="#fff4d7">

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="55dp"
        android:text="CHEF'S CHOICE"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#99720c"/>

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/mlogo"
        android:contentDescription="A tiny Android icon"/>

    <Button
        android:id="@+id/b1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv1"
        android:layout_marginLeft="30dp"
        android:background="#e0c784"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#f5e9cb"
        android:text="SIGN-UP"
        android:layout_marginTop="15dp"
        android:radius="5dp"/>

    <Button
        android:id="@+id/b2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/b1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#f5e9cb"
        android:background="#e0c784"
        android:text="LOG IN" />

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b2"
        android:src="@drawable/offers"
        android:layout_marginTop="50dp"/>


</RelativeLayout>