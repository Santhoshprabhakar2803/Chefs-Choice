<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff4d7"
    tools:context=".upload">

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="55dp"
        android:text="CHEF'S CHOICE"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#99720c"/>

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/mlogo"
        android:contentDescription="A tiny Android icon"/>

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/mlogo"
        android:alpha="0.1" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="UPLOAD YOUR PAYMENT SCREEN SHOT FOR CONFIRM YOUR ORDER"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="18dp"
        android:layout_below="@id/iv1"/>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@+id/iv1"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="95dp"
        android:src="@drawable/screenshots" />

    <Button
        android:id="@+id/uploadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="upload"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textColor="#1f8965"
        android:background="#f5dc98"/>

    <Button
        android:id="@+id/nextbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT >> "
        android:layout_below="@id/uploadButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#1f8965"
        android:background="#f5dc98"/>


</RelativeLayout>