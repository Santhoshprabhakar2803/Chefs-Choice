<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".APP_4"
    android:background="#fff4d7">

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="55dp"
        android:text="CHEF'S CHOICE"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#99720c"/>

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/mlogo"
        android:contentDescription="A tiny Android icon"/>

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/mlogo"
        android:alpha="0.1" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAYMENTS"
        android:layout_below="@+id/iv1"
        android:layout_centerHorizontal="true"
        android:textColor="#735f2a"
        android:layout_marginTop="30dp"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CASH"
        android:layout_below="@+id/tv1"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:textColor="#1f8965"
        android:background="#f5dc98"/>

    <Button
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ONLINE"
        android:layout_below="@+id/b1"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:textColor="#1f8965"
        android:background="#f5dc98"/>

    <Button
        android:id="@+id/b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:layout_below="@+id/b2"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:textColor="#1f8965"
        android:background="#f5dc98"/>





</RelativeLayout>