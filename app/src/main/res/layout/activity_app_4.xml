<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".APP_4"
    android:background="#fff4d7">

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="55dp"
        android:text="CHEF'S CHOICE"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#99720c"/>

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/mlogo"
        android:contentDescription="A tiny Android icon"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOG IN DETAILS"
        android:layout_below="@+id/iv1"
        android:layout_centerHorizontal="true"
        android:textColor="#735f2a"
        android:layout_marginTop="30dp"
        android:textSize="30dp"/>


    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USER NAME : "
        android:layout_below="@+id/tv1"
        android:layout_marginLeft="50dp"
        android:textColor="#735f2a"
        android:layout_marginTop="30dp"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/et1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint= "Enter Valid Username"
        android:layout_below="@+id/tv1"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOCATION : "
        android:layout_below="@+id/tv3"
        android:layout_marginLeft="50dp"
        android:textColor="#735f2a"
        android:layout_marginTop="30dp"
        android:textSize="20dp"/>

    <AutoCompleteTextView
        android:id="@+id/ac1"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et1"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="12dp"
        android:hint="Enter Shop Location"/>

    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ac1"
        android:layout_centerHorizontal="true"
        android:text="LOG IN"
        android:layout_marginTop="15dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#f5e9cb"
        android:background="#e0c784"/>



</RelativeLayout>